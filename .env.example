# Environment variables for the Python server
PORT=3000
UVICORN_RELOAD=true
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5433/sbp

# Seqera Platform configuration
SEQERA_API_URL=https://api.example.com
SEQERA_ACCESS_TOKEN=replace-me
COMPUTE_ID=compute-env-id
WORK_SPACE=workspace-id
WORK_DIR=s3://bucket/workdir

# AWS S3 Configuration for file uploads
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=your-private-bucket-name

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Optional DB debugging UI (Starlette Admin)
ENABLE_DB_ADMIN=false
DB_ADMIN_TITLE=SBP Backend Admin
DB_ADMIN_COOKIE_SECURE=true
DB_ADMIN_ROLE_CLAIM=biocommons/role/sbp/admin
# Set a strong random value in deployed environments.
DB_ADMIN_SESSION_SECRET=change-me-to-a-long-random-secret
DB_ADMIN_FORBIDDEN_HOME_URL=https://dev.sbp.test.biocommons.org.au/

# Optional override for AAI/Auth0 redirect login for /admin.
# By default backend uses published dev values:
#   domain=dev.login.aai.test.biocommons.org.au
#   clientId=VgTSGK8Ph92r8mVhmVvQDrxGzbWX0vCm
#   audience=https://dev.api.aai.test.biocommons.org.au
# Uncomment to override per environment:
# DB_ADMIN_AUTH_DOMAIN=dev.login.aai.test.biocommons.org.au
# DB_ADMIN_AUTH_CLIENT_ID=VgTSGK8Ph92r8mVhmVvQDrxGzbWX0vCm
# DB_ADMIN_AUTH_AUDIENCE=https://dev.api.aai.test.biocommons.org.au
# Must be added as an allowed callback URL in Auth0 app settings.
DB_ADMIN_AUTH_REDIRECT_URI=http://localhost:3000/admin/login
