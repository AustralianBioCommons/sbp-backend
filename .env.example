# Environment variables for the Python server
# Environment variables for the Python server
PORT=3000
UVICORN_RELOAD=true
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/sbp

# Seqera Platform configuration
SEQERA_API_URL=https://api.example.com
SEQERA_ACCESS_TOKEN=replace-me
COMPUTE_ID=compute-env-id
WORK_SPACE=workspace-id
WORK_DIR=s3://bucket/workdir

# AWS S3 Configuration for file uploads
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=your-private-bucket-name

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Auth0 JWT validation for user identity
AUTH0_DOMAIN=your-tenant.au.auth0.com
AUTH0_AUDIENCE=your-api-audience
# Optional custom issuer URL (if using an Auth0 custom domain)
# AUTH0_ISSUER=https://your-custom-domain.example.com/
# Optional comma-separated override (default RS256)
# AUTH0_ALGORITHMS=RS256
